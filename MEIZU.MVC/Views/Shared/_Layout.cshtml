<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="/libs/component/pear/css/pear.css" />
    <style>
        h1 {
            margin-top: 200px;
            color: #5FB878;
        }
    </style>

    @RenderSection("header", false) 
</head>
<body class="pear-container">
    <div class="layui-card">
        <div class="layui-card-header">@ViewBag.Title</div>
        <div class="layui-card-body">
            @RenderBody()
        </div>
    </div>
</body>
<script src="/libs/component/layui/layui.all.js"></script>
<script src="/libs/component/pear/pear.all.js"></script>
<script >

window.tools = {};
window.loadedFunc = null; 
    layui.use(['popup', 'notice', 'drawer', 'treetable', 'dtree', 'tinymce', 'area', 'echarts', 'upload', 'bioarea','form'], function() {
    
    tools.popup = layui.popup; 
    tools.notice = layui.notice; 
    tools.drawer = layui.drawer;
    tools.treetable = layui.treetable;
    tools.dtree = layui.dtree;
    tools.tinymce = layui.tinymce;
    tools.area = layui.area;
    tools.echarts = layui.echarts;
    
    if (loadedFunc){
        loadedFunc();
    }
});
</script>
@RenderSection("footer", false)
</html>